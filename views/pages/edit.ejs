<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<main class="container page-narrow">
  <h1 class="page-title mb-2">✏️ Redaguoti Įrašą</h1>
  
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error">⚠️ <%= error %></div>
  <% } %>

  <form action="/blog/<%= blog.id %>/edit" method="POST" class="blog-form">
    <div class="form-group">
      <label for="title">Pavadinimas *</label>
      <input type="text" id="title" name="title" required minlength="5" value="<%= blog.title %>">
    </div>

    <div class="form-group">
      <label for="snippet">Santrauka *</label>
      <textarea id="snippet" name="snippet" rows="3" required><%= blog.snippet %></textarea>
    </div>

    <div class="form-group">
      <label for="body">Turinys *</label>
      <textarea id="body" name="body" rows="15" required><%= blog.body %></textarea>
    </div>

    <div class="form-group">
      <label for="author">Autorius</label>
      <input type="text" id="author" name="author" value="<%= blog.author || '' %>">
    </div>

    <div class="form-group">
      <label for="image">Nuotraukos URL</label>
      <input type="text" id="image" name="image" value="<%= blog.image || '' %>">
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">💾 Išsaugoti</button>
      <a href="/blog/<%= blog.id %>" class="btn btn-secondary">← Atgal</a>
    </div>
  </form>
</main>

<%- include('../partials/footer') %>
